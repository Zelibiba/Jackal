<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Jackal.Views.MainMenuView">
	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
		<StackPanel.Styles>
			<Style Selector="Button">
				<Setter Property="Margin" Value="5"/>
			</Style>
		</StackPanel.Styles>
		<Button Content="Подключиться к серверу" HorizontalAlignment="Stretch"
				Command="{Binding $parent[Window].DataContext.ConnectToServer}"
				CommandParameter="{Binding $parent[Window]}"/>
		<Button Content="Создать сервер" 
				HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
				Command="{Binding $parent[Window].DataContext.CreateServer}"/>
	</StackPanel>
</UserControl>
