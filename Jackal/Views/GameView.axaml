
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Jackal.ViewModels"
			 xmlns:v="using:Jackal.Views"
			 x:Class="Jackal.Views.GameView"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             Name="Game">
	<Grid ColumnDefinitions="auto,*">
		<Viewbox Grid.Column="0">
			<ItemsControl Height="832" Width="832" Items="{Binding Cells}">
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<UniformGrid Rows="13" Columns="13"/>
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<v:CellView/>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</Viewbox>
		<Border Grid.Column="1" Background="AliceBlue">
			<Border HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20"
					BorderBrush="Black" BorderThickness="2" Padding="5">
				<WrapPanel Orientation="Vertical" IsEnabled="True">
					<ToggleButton Content="g" IsChecked="{Binding SelectedPirate.Gold}"/>
					<ToggleButton Content="G" Margin="0,5,0,0" IsChecked="{Binding SelectedPirate.Galeon}"/>
				</WrapPanel>
			</Border>
		</Border>
	</Grid>
</UserControl>
