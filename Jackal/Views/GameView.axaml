
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Jackal.ViewModels"
			 xmlns:v="using:Jackal.Views"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Jackal.Views.GameView">
	<Grid ColumnDefinitions="auto,*">
		<Viewbox Grid.Column="0">
			<ListBox Height="832" Width="832" Items="{Binding Cells}" SelectedItem="{Binding SelectedCell}">
				<ListBox.ItemsPanel>
					<ItemsPanelTemplate>
						<UniformGrid Rows="13" Columns="13"/>
					</ItemsPanelTemplate>
				</ListBox.ItemsPanel>
				<ListBox.Styles>
					<Style Selector="ListBoxItem">
						<Setter Property="Template">
							<Setter.Value>
								<ControlTemplate TargetType="ListBoxItem">
									<v:CellView/>
								</ControlTemplate>
							</Setter.Value>
						</Setter>
					</Style>
				</ListBox.Styles>
			</ListBox>
		</Viewbox>
		<Border Grid.Column="1" Background="AliceBlue">
			<Border HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20"
					BorderBrush="Black" BorderThickness="2" Padding="5">
				<WrapPanel Orientation="Vertical" IsEnabled="True">
					<ToggleButton Content="g" IsChecked="{Binding SelectedPirate.Gold}"/>
					<ToggleButton Content="G" Margin="0,5,0,0" IsChecked="{Binding SelectedPirate.Galeon}"/>
				</WrapPanel>
			</Border>
		</Border>
	</Grid>
</UserControl>
